{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "composite": true,
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.app.tsbuildinfo",
    "paths": {
      "@/*": ["./src/*"],
      "@til/*": ["./src/docs/til/*"],
      "@plugins/*": ["./plugins/*"]
    }
  },
  "include": ["src", "plugins", "vite.config.ts", "tests/**/*.ts"],
  "exclude": ["node_modules", "dist", "build", "modules"]
}
